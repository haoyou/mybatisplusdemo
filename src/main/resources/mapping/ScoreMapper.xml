<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chy.mybatisplusdemo.mapper.ScoreMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chy.mybatisplusdemo.pojo.Score" id="ScoreMap">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="kecheng" property="kecheng" jdbcType="VARCHAR" />
        <result column="score" property="score" jdbcType="INTEGER" />
    </resultMap>


<!--parameterType表示入参-->
    <select id="getScoreById" parameterType="INTEGER" resultMap="ScoreMap">
        select *
        from score
        where 1=1
            and id = #{id,jdbcType=INTEGER}
    </select>
</mapper>